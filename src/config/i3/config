# Global style {{{
title_align center
client.focused          #4c7899 #03a9f4 #ffffff #2e9ef4 #285577
client.focused_inactive #333333 #5f676a #ffffff #484e50 #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e #222222
client.urgent           #2f343a #900000 #ffffff #900000 #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000 #0c0c0c

client.background       #ffffff
# }}}

# Floating programs{{{
set $floating_classes "(keepassx|Gnome-calculator)"

for_window [class=$floating_classes] floating enable
for_window [class=$floating_classes] border pixel 0
for_window [class=$floating_classes] move position center
# Let the application decide the minimum
for_window [class=$floating_classes] resize set width 1px height 1px

set $floating_titltes "(Cryptomator)"
for_window [title=$floating_titltes] floating enable
for_window [title=$floating_titltes] border pixel 0
for_window [title=$floating_titltes] move position center
for_window [title=$floating_titltes] resize set width 1px height 1px
# }}}

# Conky {{{
for_window [class="conky"] border pixel 0
# }}}

